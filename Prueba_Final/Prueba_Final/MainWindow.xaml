<Window x:Class="Prueba_Final.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <DataGrid x:Name="dgvAlumnos" Grid.Row="0" AutoGenerateColumns="True" />

        <StackPanel Grid.Row="1" Orientation="Horizontal">
            <Button Content="Agregar" Click="btnAgregar_Click" />
            <Button Content="Actualizar" Click="btnActualizar_Click" />
            <Button Content="Eliminar" Click="btnEliminar_Click" />
        </StackPanel>

        <StackPanel Grid.Row="2" Orientation="Horizontal">
            <Label Content="Nombre:" />
            <TextBox x:Name="txtNombre" Width="150" />
            <Label Content="Apellido:" Margin="10,0,0,0" />
            <TextBox x:Name="txtApellido" Width="150" />
            <Label Content="Edad:" Margin="10,0,0,0" />
            <TextBox x:Name="txtEdad" Width="50" />
            <Label Content="Carrera:" Margin="10,0,0,0" />
            <TextBox x:Name="txtCarrera" Width="150" />
        </StackPanel>
    </Grid>
</Window>
